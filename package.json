{
  "name": "spm-group5",
  "version": "1.0.0",
  "description": "SPM Group 5 Project - Task Management System",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:api": "cd backend && npm run test:api",
    "test:unit": "cd backend && npm run test:unit",
    "test:ui": "cd frontend && npm test",
    "test:assign": "cd backend && npm run test:assign",
    "test:all": "npm run test:backend && npm run test:frontend",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "cd backend && npm run test:coverage",
    "test:coverage:frontend": "cd frontend && npm run test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "@playwright/test": "^1.56.1"
  }
}
